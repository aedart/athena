{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "module": "ESNext",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "strict": true,
    "jsx": "preserve",
    "target": "ES2020",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@aedart/*": ["packages/*/src"]
    }
  },
  "include": [
    "packages/*/src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
